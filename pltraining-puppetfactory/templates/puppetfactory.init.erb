#!/bin/bash
#
# webhooks Manage PuppetFactory service
#
# chkconfig: 2345 55 25
# description: Stupidsimple PuppetFactory implementation.
#
# This is a pretty cruddy init script.

# source function library
#. /etc/rc.d/init.d/functions

PATH=/usr/local/bin:$PATH
PID=`ps ax | grep "ruby.*puppetfactory$" | awk '{print $1}'`

printstat()
{
  if [ "$1" != "" ]
  then
    echo $1
  else
    if [ $RETVAL -eq 0 ]; then echo "OK"; else echo "FAIL"; fi
  fi
}

start()
{
	echo -n $"Starting PuppetFactory: "
	puppetfactory
	RETVAL=$?
	printstat
}

stop()
{
  echo -n $"Stopping PuppetFactory: "
	if [ "${PID}" == "" ]
	then
  	printstat 'not running'
  	RETVAL=2
  else
    kill ${PID}
    RETVAL=$?
    sleep 3 # it would be nice if webrick didn't take so long to shut down
    printstat
  fi
}

status()
{
  if [ "${PID}" != "" ]
  then
    echo $"PuppetFactory is running."
    RETVAL=0
  else
    echo $"PuppetFactory is stopped."
    RETVAL=1
  fi
}

restart() {
	stop
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	status)
		status
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|status}"
		RETVAL=10
esac
exit $RETVAL
